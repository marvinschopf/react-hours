{
	"compilerOptions": {
		"rootDir": "src",
		"declaration": true,
		"declarationDir": "dist",
		"outDir": "dist/cjs",
		"target": "ES5",
		"module": "CommonJS",
		"lib": ["es6", "dom", "es2016", "es2017"],
		"sourceMap": true,
		"jsx": "react",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": false
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"build",
		"storybook-static",
		"src/**/*.stories.tsx",
		"src/**/*.test.tsx"
	]
}
